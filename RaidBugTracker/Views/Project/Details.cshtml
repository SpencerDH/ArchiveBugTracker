@model RaidBugTracker.Models.Project
@{ ViewData["Title"] = "Details"; }

<h1>Details</h1>

<div>
    <h4>Project</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
</div>
<div>
    <table>
        <tr>
            <th>Bugs</th>
        </tr>
        @foreach (var item in Model.ProjectBugPages)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.BugPage.Name)</td>
            </tr>
        }
    </table>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
